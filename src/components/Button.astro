---
import { Icon } from 'astro-icon/components';

const { href, fill } = Astro.props;
---

<style>
  a {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    border: 2px solid #dbe04f;
    border-radius: 8px;
    font-family: "IBM Plex Mono", monospace;
    font-weight: bold;
    letter-spacing: -1px;
    font-size: 1.5rem;
    color: #f5f5f5;
    margin: 0.5rem;
    padding: 0.5rem 1.5rem;
    text-decoration: none;
    transition: box-shadow 0.25s;

    &.fill {
      background: #dbe04f;
      color: #180c1d;
    }

    &:is(:hover, :focus, :active) {
      box-shadow: 0 0 15px #dbe04f;
    }
  }
</style>

<a href={href} class:list={{ fill }} data-name="jonan40">
  <slot></slot>
</a>
